set nocompatible

" style
set ruler
set number
set cursorline
set laststatus=2
set cmdheight=1
set termguicolors

" edit
set autoindent
set smarttab
set expandtab
set shiftwidth=2
set relativenumber
set nowrap

" search
set ignorecase
set smartcase
set hlsearch
set incsearch

" complete
set wildmenu

" filetype
syntax on
filetype plugin indent on

" encode
set encoding=utf-8
